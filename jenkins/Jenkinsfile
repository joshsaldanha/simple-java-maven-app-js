pipeline {
    agent {
        docker {
            image 'maven:3.9.9-jdk-21' // Valid image with JDK 21
            args '--entrypoint /bin/bash -v $HOME/.m2:/root/.m2' // Ensure Bash is used
        }
    }
    environment {
        SHELL = '/bin/bash' // Explicitly set Bash
    }
    stages {
        stage('Build') {
            steps {
                sh '/bin/bash -c "mvn -B -DskipTests clean package"'
            }
        }
        stage('Test') {
            steps {
                sh '/bin/bash -c "mvn test"'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deliver') {
            steps {
                sh '/bin/bash -c "./jenkins/scripts/deliver.sh"'
            }
        }
    }
}

