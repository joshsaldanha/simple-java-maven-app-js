pipeline {
    agent {
        docker {
            image 'maven:3.9.6-eclipse-temurin-21' // Correct image with JDK 21
            args '--entrypoint /bin/bash -v $HOME/.m2:/root/.m2' // Use Bash
        }
    }
    environment {
        SHELL = '/bin/bash'
    }
    stages {
        stage('Build') {
            steps {
                sh '/bin/bash -c "mvn -B -DskipTests clean package"'
            }
        }
        stage('Test') {
            steps {
                sh '/bin/bash -c "mvn test"'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deliver') {
            steps {
                sh '/bin/bash -c "./jenkins/scripts/deliver.sh"'
            }
        }
    }
}

