pipeline {
    agent {
        docker { 
            image 'maven:3.9.6-eclipse-temurin-21'
            args '-v maven-repo:/root/.m2'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh """
                   mkdir -p /root/.m2/repository
                   chmod -R 777 /root/.m2
                   mvn -version
                   ls
                   mvn -Dmaven.repo.local=/root/.m2/repository -B clean package
                """
            }
        }
    }
}
